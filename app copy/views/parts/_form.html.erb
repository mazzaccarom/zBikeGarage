<%= form_with(model: part) do |form| %>
    <% if part.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>
        <ul>
          <% part.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :part_type, style: "display: block" %>
      <%= form.text_field :part_type %>
    </div>
  
    <div>
      <%= form.label :brand, style: "display: block" %>
      <%= form.text_field :brand %>
    </div>
  
    <div>
      <%= form.label :model, style: "display: block" %>
      <%= form.text_field :model %>
    </div>
  
    <div>
      <%= form.label :year, style: "display: block" %>
      <%= form.number_field :year %>
    </div>

    <div>
        <%= form.label :bike_id, class: "form-label" %>
        <%= form.collection_select :bike_id, Bike.all, :id, :make, {prompt: "Select a bike"}, {class: "form-control"} %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  