<%= form_with(model: ride) do |form| %>
  <% if ride.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ride.errors.count, "error") %> prohibited this ride from being saved:</h2>

      <ul>
        <% ride.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :miles, style: "display: block" %>
    <%= form.text_field :miles %>
  </div>

  <div>
    <%= form.label :hours, style: "display: block" %>
    <%= form.text_field :hours %>
  </div>

  <div>
    <%= form.label :bike_id, class: "form-label" %>
    <%= form.collection_select :bike_id, Bike.all, :id, :make, {prompt: "Select a bike"}, {class: "form-control"} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
